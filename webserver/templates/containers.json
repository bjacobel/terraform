[
  {
    "name": "caddy",
    "portMappings": [
      {
        "hostPort": 443,
        "containerPort": 443,
        "protocol": "tcp"
      },
      {
        "hostPort": 80,
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "environment": [
      {
        "name": "CADDYPATH",
        "value": "/caddy/.caddy"
      }
    ],
    "mountPoints": [
      {
        "containerPath": "/caddy",
        "sourceVolume": "caddy-root"
      }
    ],
    "entryPoint": [
      "/bin/sh"
    ],
    "command": [
      "-c",
      "echo \"${caddyfile}\" | sed 's/\\\\n/\\n/g' > /caddy/Caddyfile && /usr/bin/caddy --conf /caddy/Caddyfile"
    ],
    "image": "yobasystems/alpine-caddy",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "caddy"
      }
    },
    "memoryReservation": 50,
    "privileged": true,
    "user": "root",
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 8192,
        "hardLimit": 32768
      }
    ]
  }
]
