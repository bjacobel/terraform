[
  {
    "name": "caddy",
    "portMappings": [
      {
        "hostPort": 443,
        "containerPort": 443,
        "protocol": "tcp"
      },
      {
        "hostPort": 80,
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "mountPoints": [
      {
        "containerPath": "/var/www/html/Caddyfile",
        "sourceVolume": "Caddyfile"
      },
      {
        "containerPath": "/.caddy",
        "sourceVolume": "dot-caddy"
      }
    ],
    "image": "joshix/caddy",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "caddy"
      }
    },
    "memoryReservation": 50
  }
]
