[
  {
    "portMappings": [
      {
        "hostPort": 500,
        "containerPort": 500,
        "protocol": "udp"
      },
      {
        "hostPort": 4500,
        "containerPort": 4500,
        "protocol": "udp"
      }
    ],
    "essential": true,
    "mountPoints": [
      {
        "containerPath": "/lib/modules",
        "sourceVolume": "modules",
        "readOnly": true
      }
    ],
    "name": "ipsec-vpn-server",
    "environment": [
      {
        "name": "VPN_IPSEC_PSK",
        "value": "${VPN_IPSEC_PSK}"
      },
      {
        "name": "VPN_PASSWORD",
        "value": "${VPN_PASSWORD}"
      },
      {
        "name": "VPN_USER",
        "value": "${VPN_USER}"
      }
    ],
    "image": "hwdsl2/ipsec-vpn-server",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "us-east-1"
      }
    },
    "privileged": true,
    "memoryReservation": 100
  }
]
