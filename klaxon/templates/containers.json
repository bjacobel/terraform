[
  {
    "name": "klaxon",
    "environment": [
      {
        "name": "AMAZON_SES_ADDRESS",
        "value": "${AMAZON_SES_ADDRESS}"
      },
      {
        "name": "AMAZON_SES_DOMAIN",
        "value": "${AMAZON_SES_DOMAIN}"
      },
      {
        "name": "AMAZON_SES_PASSWORD",
        "value": "${AMAZON_SES_PASSWORD}"
      },
      {
        "name": "AMAZON_SES_USERNAME",
        "value": "${AMAZON_SES_USERNAME}"
      },
      {
        "name": "DATABASE_URL",
        "value": "${DATABASE_URL}"
      },
      {
        "name": "MAILER_FROM_ADDRESS",
        "value": "${MAILER_FROM_ADDRESS}"
      },
      {
        "name": "SECRET_KEY_BASE",
        "value": "${SECRET_KEY_BASE}"
      },
      {
        "name": "SMTP_PROVIDER",
        "value": "${SMTP_PROVIDER}"
      }
    ],
    "links": [
      "postgres"
    ],
    "image": "bjacobel/klaxon",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "klaxon"
      }
    },
    "command": [
      "sh",
      "-c",
      "sleep 30; bundle exec puma -C config/puma.rb"
    ],
    "essential": true,
    "memoryReservation": 100
  },
  {
    "name": "postgres",
    "hostname": "postgres",
    "essential": true,
    "mountPoints": [
      {
        "containerPath": "/var/lib/postgresql/data",
        "sourceVolume": "postgres-data"
      }
    ],
    "image": "postgres:9.6-alpine",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "postgres"
      }
    },
    "memoryReservation": 50
  },
  {
    "name": "migrate",
    "essential": false,
    "environment": [
      {
        "name": "ADMIN_EMAILS",
        "value": "${ADMIN_EMAILS}"
      },
      {
        "name": "DATABASE_URL",
        "value": "${DATABASE_URL}"
      }
    ],
    "links": [
      "postgres"
    ],
    "image": "axioscode/klaxon",
    "command": [
      "sh",
      "-c",
      "sleep 30; bundle exec rake db:create db:migrate users:create_admin && rails runner \"AppSetting.set_default_host('http://klaxon.${cluster_name}.${domain_name}')\""
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "migrate"
      }
    },
    "memoryReservation": 50
  }
]
